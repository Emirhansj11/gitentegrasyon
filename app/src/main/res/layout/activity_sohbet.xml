<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gri"
    tools:context=".Sohbet">

    <TextView
        android:layout_width="80dp"
        android:clickable="true"
        android:id="@+id/back"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="310dp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:textColor="@color/black"
        android:textStyle="italic"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:textSize="18dp"
       android:text="Haydi,sende bu tatlı sohbetin bir parçası ol!"
       android:textStyle="bold|italic"
       android:fontFamily="@font/abril_fatface"
       android:gravity="center"
       android:layout_marginTop="70dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="118dp"
        android:background="@color/gri"
        android:src="@drawable/buyukyazibizam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:hint="Mesaj"
        android:padding="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:id="@+id/etYazi"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="left"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvYazi"
        android:text=""
        android:padding="10dp"
        android:layout_marginTop="200dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@color/yesil"
        android:padding="15dp"
        android:drawableStart="@drawable/baseline_send_black"
        android:layout_marginLeft="290dp"
        android:id="@+id/btnGoner"
        android:layout_marginTop="130dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearlay"
            android:orientation="vertical"
            android:layout_height="match_parent">


        </LinearLayout>

    </ScrollView>




    
</RelativeLayout>