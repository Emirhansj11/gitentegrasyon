<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gri"
    tools:context=".GidaActivity">

    <TextView
        android:layout_width="80dp"
        android:clickable="true"
        android:id="@+id/back2"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="310dp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:textColor="@color/black"
        android:textStyle="italic"/>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="118dp"
        android:background="@color/gri"
        android:src="@drawable/buyukyazibizam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:id="@+id/icecekler"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#AC6C82"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/icecek" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="          İçecekler"
            android:textColor="@color/black"
            android:textSize="38dp" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Çay,ayran,kola,su,süt..."
            android:textStyle="italic"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:id="@+id/meyvesebze"
        android:layout_height="100dp"
        android:layout_marginTop="360dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#DA727E"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/meyvesebze" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="         Meyve-Sebze"
            android:textColor="@color/black"
            android:textSize="38dp" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Domates,biber,soğan..."
            android:textStyle="italic"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:id="@+id/eturunleri"
        android:layout_height="100dp"
        android:layout_marginTop="560dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#FFBC67"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/et" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="         Et Ürünleri"
            android:textColor="@color/black"
            android:textSize="38dp" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Tavuk,salam,sucuk,sosis..."
            android:textStyle="italic"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp" />

    </androidx.cardview.widget.CardView>





</RelativeLayout>